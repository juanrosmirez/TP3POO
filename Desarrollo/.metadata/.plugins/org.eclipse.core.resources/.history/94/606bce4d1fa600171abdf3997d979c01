package personaje;

import static org.junit.Assert.*;

import org.junit.Test;

public class SoldadoTest {
	private Unidad unidad;

	@Test
	public void crearSoldadoTest(){
		unidad = new Soldado(0);
		
		System.out.println(unidad.getAtaque());
		System.out.println(		unidad.getEnergia() );
				System.out.println(		unidad.getPosicion() );
				System.out.println(		unidad.getDefensa()  );
						System.out.println(		unidad.getSalud() );
		
		
		
		assertTrue(
					unidad.getAtaque() == 10 && 
					unidad.getEnergia() == 10 &&
					unidad.getPosicion() == 0 &&
					unidad.getDefensa() == 1 && 
					unidad.getSalud() == 200
				  );
	}
		
}
