package personaje;

import static org.junit.Assert.*;

import org.junit.Test;

import item.Capa;
import item.Escudo;
import item.Puñal;

public class SoldadoTest {
	private Unidad unidad;

	@Test
	public void crearSoldadoNuevoTest(){
		unidad = new Soldado(1);
		assertTrue(
					Double.compare(unidad.getAtaque(),  10)   == 0 && 
					Double.compare(unidad.getEnergia(), 100)  == 0 &&
					Double.compare(unidad.getPosicion(), 1)   == 0 &&
					Double.compare(unidad.getDefensa() , 1)   == 0 && 
					Double.compare(unidad.getSalud(),    200) == 0
				  );
	}
	
	@Test
	public void equiparEscudoTest(){
		unidad = new Soldado(1);
		unidad = new Escudo(unidad);
		assertTrue(
					Double.compare(unidad.getAtaque(),  10)   == 0 && 
					Double.compare(unidad.getEnergia(), 100)  == 0 &&
					Double.compare(unidad.getPosicion(), 1)   == 0 &&
					Double.compare(unidad.getDefensa() , 1.4)   == 0 && 
					Double.compare(unidad.getSalud(),    200) == 0
				  );
	}	
	
	@Test
	public void equiparPunialTest(){
		unidad = new Soldado(1);
		unidad = new Puñal(unidad);
		assertTrue(
					Double.compare(unidad.getAtaque(),  13)   == 0 && 
					Double.compare(unidad.getEnergia(), 100)  == 0 &&
					Double.compare(unidad.getPosicion(), 1)   == 0 &&
					Double.compare(unidad.getDefensa() , -2)   == 0 && 
					Double.compare(unidad.getSalud(),    200) == 0
				  );
	}	

	@Test
	public void equiparCapaTest(){
		unidad = new Soldado(1);
		unidad = new Capa(unidad);
		assertTrue(
					Double.compare(unidad.getAtaque(), 9)   == 0 && 
					Double.compare(unidad.getEnergia(), 200)  == 0 &&
					Double.compare(unidad.getPosicion(), 1)   == 0 &&
					Double.compare(unidad.getDefensa() , 1)   == 0 && 
					Double.compare(unidad.getSalud(),    200) == 0
				  );
	}	
		
}
