package personaje;

import item.Peleable;

public abstract class Unidad implements Peleable{

	private int salud;
	private int posicion;
	
	public Unidad(int salud, int posicion){
		this.salud = salud;
		this.posicion = posicion;
	}
	
	public final int atacar(Unidad u){
		if (!puedoAtacar(u))
			return 0;
		
		return u.recibirDanio(this.getAtaque());
	}
	
	public final int recibirDanio(int valor){
		int valorAtaqueFinal = valor - getDefensa();
		if(valorAtaqueFinal < 0 )
			valorAtaqueFinal = 0;
		
		salud = salud - valorAtaqueFinal;
		
		return valorAtaqueFinal;
	}
	
	public boolean puedoAtacar(Unidad u){
		if(getEnergia()<=0)
			return false;
		return true;
	}
	
	
	@Override
	public abstract int getAtaque() ;
	
	@Override
	public abstract int getEnergia() ;
	
	@Override
	public final int getDefensa(){
		return 0;
	}
	public final int getPosicion(){
		return posicion;
	}



}
