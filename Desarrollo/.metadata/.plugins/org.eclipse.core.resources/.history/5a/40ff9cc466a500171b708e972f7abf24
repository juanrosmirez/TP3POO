package personaje;

import item.Peleable;

public abstract class Unidad implements Peleable{

	private int salud;
	private int posicion;
	
	public Unidad(int salud){
		this.salud = salud;
	}
	
	public final boolean atacar(Unidad u){
		if (!puedoAtacar(u))
			return false;
		
		u.recibirDanio(this.getAtaque());
		
		return true;
		
	}
	
	public abstract void recibirDanio(int valor);
	public boolean puedoAtacar(Unidad u){
		if(getEnergia()<=0)
			return false;
		return true;
	}
	
	
	@Override
	public int getAtaque() {
		return 0;
	}

	@Override
	public int getEnergia() {
		return 1;
	}

	@Override
	public int getDefensa() {
		return 0;
	}

}
