import item.Capa;
import item.Peleable;
import personaje.Soldado;
import personaje.Unidad;

public class juego {

	public static void main(String[] args) {
		
		Peleable u1 = new Soldado(9);
		Peleable u2 = new Soldado(9);
		
		u1 = new Capa(u1);
		
		System.out.println(u2.conVida());
		for(int i = 1 ; i <= 20 ; i++ )
			u1.atacar(u2);
		System.out.println(u2.conVida());
		
	}

}
