package personaje;

import static org.junit.Assert.*;

import org.junit.Test;

public class SoldadoTest {
	private Unidad unidad;

	@Test
	public void crearSoldadoTest(){
		unidad = new Soldado(0);
		
		System.out.println(Double.compare(unidad.getAtaque(),10) == 0);
		System.out.println(Double.compare(unidad.getEnergia(), 10)==0);
		System.out.println(Double.compare(unidad.getPosicion() ,0)==0 );
		System.out.println(Double.compare(unidad.getDefensa() ,1)==0 );
		System.out.println(Double.compare(unidad.getSalud(),200)==0);
		
	
		
		
		assertTrue(
					Double.compare(unidad.getAtaque(),10) == 0 && 
					Double.compare(unidad.getEnergia(), 10)==0 &&
							Double.compare(unidad.getPosicion() ,0)==0 &&
									Double.compare(unidad.getDefensa() ,1)==0 && 
											Double.compare(unidad.getSalud(),200)==0
				  );
	}
		
}
