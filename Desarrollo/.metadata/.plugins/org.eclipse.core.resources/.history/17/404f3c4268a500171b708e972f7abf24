package personaje;

import item.Peleable;

public abstract class Unidad implements Peleable{

	private int salud;
	private int posicion;
	
	public Unidad(int salud){
		this.salud = salud;
	}
	
	public final int atacar(Unidad u){
		if (!puedoAtacar(u))
			return 0;
		
		return u.recibirDanio(this.getAtaque());
	}
	
	public abstract int recibirDanio(int valor);
	
	public boolean puedoAtacar(Unidad u){
		if(getEnergia()<=0)
			return false;
		return true;
	}
	
	
	@Override
	public abstract int getAtaque() ;

	@Override
	public int getEnergia() {
		return 1;
	}

	@Override
	public int getDefensa() {
		return 0;
	}

	public int getPosicion() {
		return posicion;
	}

}
